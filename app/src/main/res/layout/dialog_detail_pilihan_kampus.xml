<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="0.7"
          android:layout_height="match_parent"
          android:text="@string/peringkat_text"
          android:fontFamily="@font/robotoregular"
          android:textSize="14sp"/>
      <TextView
          android:id="@+id/tv_peringkat_pemilih"
          android:layout_width="0dp"
          android:layout_weight="1.3"
          android:layout_height="match_parent"
          android:fontFamily="@font/robotoblack"
          android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="0.7"
          android:layout_height="match_parent"
          android:text="@string/total_pemilih_text"
          android:fontFamily="@font/robotoregular"
          android:textSize="14sp"/>
      <TextView
          android:id="@+id/tv_total_pemilih"
          android:layout_width="0dp"
          android:layout_weight="1.3"
          android:layout_height="match_parent"
          android:fontFamily="@font/robotoblack"
          android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="0.7"
          android:layout_height="match_parent"
          android:text="@string/daya_tampung_text"
          android:fontFamily="@font/robotoregular"
          android:textSize="14sp"/>
      <TextView
          android:id="@+id/tv_daya_tampung_prodi_pemilih"
          android:layout_width="0dp"
          android:layout_weight="1.3"
          android:layout_height="match_parent"
          android:fontFamily="@font/robotoblack"
          android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/persentase_kursi_text"
          android:fontFamily="@font/robotoregular"
          android:textSize="14sp"/>
      <TextView
          android:id="@+id/tv_persentase_pilihan_pemilih"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:fontFamily="@font/robotoblack"
          android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content_pilihan"
        android:textStyle="italic"/>

  </LinearLayout>
</androidx.cardview.widget.CardView>