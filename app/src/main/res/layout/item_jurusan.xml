<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="8dp"
      android:layout_margin="8dp"
      android:weightSum="10">

    <TextView
        android:id="@+id/tv_nama_jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neosansblack"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_kelompok_jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">
      <LinearLayout
          android:layout_weight="3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:weightSum="2">
        <TextView
            android:text="@string/text_mapel"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:layout_margin="8dp"
            android:id="@+id/tv_mapel_jurusan"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
      </LinearLayout>
      <View
          android:background="@color/dividerColor"
          android:layout_width="1dp"
          android:layout_height="match_parent"/>
      <LinearLayout
          android:layout_weight="3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:weightSum="2">
        <TextView
            android:text="@string/text_tipe"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tv_tipe_jurusan"
            android:textSize="12sp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>