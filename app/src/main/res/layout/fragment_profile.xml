<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/iv_foto_profil_akun"
      android:layout_width="80dp"
      android:layout_height="80dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_nama_akun"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
      app:layout_constraintStart_toEndOf="@+id/iv_foto_profil_akun" android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintHorizontal_bias="0"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      android:id="@+id/tv_email_akun" app:layout_constraintStart_toEndOf="@+id/iv_foto_profil_akun"
      android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/tv_nama_akun"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintHorizontal_bias="0"
      android:id="@+id/tv_alamat_akun" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp" android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/iv_foto_profil_akun"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintHorizontal_bias="0"
      android:id="@+id/tv_no_telp_akun" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_alamat_akun"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintHorizontal_bias="0"
      android:id="@+id/tv_asal_sekolah_akun" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_no_telp_akun"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintHorizontal_bias="0"
      android:id="@+id/tv_intagram_akun" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_asal_sekolah_akun"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/neosansblack"
      android:textSize="15sp"
      app:layout_constraintHorizontal_bias="0"
      android:id="@+id/tv_facebook_akun" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_intagram_akun"/>
</android.support.constraint.ConstraintLayout>